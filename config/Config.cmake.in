# absolute path to CMake modules
get_filename_component (@PACKAGE_NAME@_MODULE_PATH "@MODULE_PATH_CONFIG@" ABSOLUTE)

# absolute path to utilities template files
get_filename_component (@PACKAGE_NAME@_UTILITIES_DIR "@UTILITIES_DIR_CONFIG@" ABSOLUTE)

# absolute path to project template
get_filename_component (@PACKAGE_NAME@_TEMPLATE_URL "@TEMPLATE_URL_CONFIG@" ABSOLUTE)

if (NOT @PACKAGE_NAME@_TEMPLATE_URL MATCHES "^file://|^http://|^https://")
  set (@PACKAGE_NAME@_TEMPLATE_URL "file://${@PACKAGE_NAME@_TEMPLATE_URL}")
endif ()

# include directories
set (@PACKAGE_NAME@_INCLUDE_DIR "@INCLUDE_DIR_CONFIG@")

# libraries directory
set (@PACKAGE_NAME@_LIBRARY_DIR "@LIBRARY_DIR_CONFIG@")

# libraries
set (@PACKAGE_NAME@_UTILS_LIBRARY "@UTILS_LIBRARY_CONFIG@")
set (@PACKAGE_NAME@_TEST_LIBRARY  "@TEST_LIBRARY_CONFIG@")

set (
  @PACKAGE_NAME@_LIBRARIES
    ${@PACKAGE_NAME@_UTILS_LIBRARY}
    ${@PACKAGE_NAME@_TEST_LIBRARY}
)

# doxygen filters
set (BASIS_DOXYGEN_INPUT_FILTER      "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-filter.pl")
set (BASIS_DOXYGEN_FILTER_PYTHON     "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-python-filter.py -f")
set (BASIS_DOXYGEN_FILTER_PERL       "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-filter.pl")
set (BASIS_DOXYGEN_FILTER_JAVASCRIPT "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-filter.pl")
set (BASIS_DOXYGEN_FILTER_CMAKE      "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-cmake-filter.py")
set (BASIS_DOXYGEN_FILTER_BASH       "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-bash-filter.py")
set (BASIS_DOXYGEN_FILTER_MATLAB     "${CMAKE_CURRENT_LIST_DIR}/src/tools/doxygen-matlab-filter.pl")

# absolute path of project use file which is included by other projects
set (@PACKAGE_NAME@_USE_FILE "${CMAKE_CURRENT_LIST_DIR}/@USE_FILE@")

