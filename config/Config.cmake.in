# absolute path to CMake modules
get_filename_component (@PACKAGE_NAME@_MODULE_PATH "@MODULE_PATH_CONFIG@" ABSOLUTE)

# absolute path to utilities files
get_filename_component (@PACKAGE_NAME@_CXX_TEMPLATES_DIR "@CXX_TEMPLATES_DIR_CONFIG@"    ABSOLUTE)

# absolute path to project template
get_filename_component (@PACKAGE_NAME@_TEMPLATE_URL "@TEMPLATE_URL_CONFIG@" ABSOLUTE)

if (NOT @PACKAGE_NAME@_TEMPLATE_URL MATCHES "^file://|^http://|^https://")
  set (@PACKAGE_NAME@_TEMPLATE_URL "file://${@PACKAGE_NAME@_TEMPLATE_URL}")
endif ()

# include directories
set (@PACKAGE_NAME@_INCLUDE_DIR "@INCLUDE_DIR_CONFIG@")

# libraries directory
set (@PACKAGE_NAME@_LIBRARY_DIR "@LIBRARY_DIR_CONFIG@")

# libraries
set (@PACKAGE_NAME@_UTILITIES_LIBRARY     "basis@utils")
set (@PACKAGE_NAME@_UNITTEST_LIBRARY      "basis@unittest")
set (@PACKAGE_NAME@_UNITTEST_MAIN_LIBRARY "basis@unittest-main")

set (@PACKAGE_NAME@_LIBRARIES
  ${@PACKAGE_NAME@_UTILITIES_LIBRARY}
  ${@PACKAGE_NAME@_UNITTEST_LIBRARY}
)

## @brief Absolute path of project use file which is included by other projects.
set (@PACKAGE_NAME@_USE_FILE "${CMAKE_CURRENT_LIST_DIR}/@USE_FILE@")

## @brief Absolute path of exports file to be included by other projects.
set (@PACKAGE_NAME@_EXPORTS_FILE "${CMAKE_CURRENT_LIST_DIR}/@EXPORTS_FILE@")

## @brief Absolute path of custom exports file to be included by other projects.
set (@PACKAGE_NAME@_CUSTOM_EXPORTS_FILE "${CMAKE_CURRENT_LIST_DIR}/@CUSTOM_EXPORTS_FILE@")
