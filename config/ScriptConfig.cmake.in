##############################################################################

@BASIS_SCRIPT_CONFIG@

basis_set_script_path (
  TEMPLATE_DIR
    "@PROJECT_DATA_DIR@/template"
    "@INSTALL_TEMPLATE_DIR@"
)

basis_set_script_path (
  MODULES_DIR
    "@PROJECT_CODE_DIR@/cmake"
    "@INSTALL_MODULES_DIR@"
)

basis_set_script_path (
  BASISTEST_CTEST_SCRIPT_DIR
    "@CMAKE_LIBEXEC_OUTPUT_DIRECTORY@"
    "@INSTALL_MODULES_DIR@"
)

# directory of BASIS used by tests to build test projects
set (TESTING_BASIS_DIR "@PROJECT_BINARY_DIR@")
