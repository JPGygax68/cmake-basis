# ----------------------------------------------------------------------------
# prefix used for variable names
set (NS "@PROJECT_NAME@_")

# ----------------------------------------------------------------------------
# include guard
if (__${NS}USE_FILE_INCLUDED)
  return ()
else ()
  set (__${NS}USE_FILE_INCLUDED 1)
endif ()

# ----------------------------------------------------------------------------
# BASIS settings

# include main module
include ("${$NS}MODULE_PATH}/BasisProject.cmake" NO_POLICY_SCOPE)

# include directories
basis_include_directories ("${${NS}INCLUDE_DIR}")

# ----------------------------------------------------------------------------
# import build targets - has to be done AFTER including BasisProject module!
if (NOT NO_${NS}IMPORTS)
  include ("${${NS}EXPORTS_FILE}")
  include ("${${NS}CUSTOM_EXPORTS_FILE}")
endif ()
