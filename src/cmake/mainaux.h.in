/*!
 * \brief Get absolute path to auxiliary data.
 *
 * \return Absolute path to auxiliary data.
 */
inline
std::string getDataPath ()
{
    std::string prefix = getExecutablePath ();
#ifdef LIBEXEC
    prefix += cLibexecPrefix;
#else
    prefix += cRuntimePrefix;
#endif
    return toAbsolutePath (prefix + cDataPath);
}

/*!
 * \brief Prints version information.
 */
inline
void printVersion ()
{
    std::cout << getExecutableName () << ' ' << cVersion;
    if (cRevision) {
        std::cout << " (Rev. " << cRevision << ')';
    }
    std::cout << std::endl;
}


