/*!
 * \brief Get absolute path to auxiliary data.
 *
 * \return Absolute path to auxiliary data.
 */
inline
std::string GetDataPath ()
{
    std::string prefix = GetExecutableDirectory ();
#ifdef LIBEXEC
    prefix += cLibexecPrefix;
#else
    prefix += cRuntimePrefix;
#endif
    return ToAbsolutePath (prefix + cDataPath);
}

/*!
 * \brief Print version information.
 */
inline
void PrintVersion ()
{
    std::cout << GetExecutableName () << "(" << cProjectName << ") version " << cVersion << std::endl;
    std::cout << "Copyright (c) 2011 University of Pennsylvania. All rights reserved." << std::endl;
    std::cout << "See COPYING file or https://www.rad.upenn.edu/sbia/software/license.html." << std::endl;
}


