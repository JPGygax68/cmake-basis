#pragma once
#ifndef __@PROJECT_NAME_UPPER@_CONFIG_H
#define __@PROJECT_NAME_UPPER@_CONFIG_H


/****************************************************************************
 * constants
 ****************************************************************************/

/*!
 * \def   TRUE
 * \brief Boolean value TRUE.
 */
#ifndef TRUE
#  define TRUE 1
#endif

/*!
 * \def   FALSE
 * \brief Boolean value FALSE.
 */
#ifndef FALSE
#  define FALSE 0
#endif

/*!
 * \def   NULL
 * \brief Value of invalid pointer, i.e., NULL pointer.
 */
#ifndef NULL
#  define NULL 0
#endif

/****************************************************************************
 * version
 ****************************************************************************/

/*!
 * \def   @PROJECT_NAME_UPPER@_VERSION_MAJOR
 * \brief The major version number.
 */ 
#define @PROJECT_NAME_UPPER@_VERSION_MAJOR @PROJECT_VERSION_MAJOR@

/*!
 * \def   @PROJECT_NAME_UPPER@_VERSION_MINOR
 * \brief The minor version number.
 */
#define @PROJECT_NAME_UPPER@_VERSION_MINOR @PROJECT_VERSION_MINOR@

/*!
 * \def   @PROJECT_NAME_UPPER@_VERSION_PATCH
 * \brief The patch number.
 */
#define @PROJECT_NAME_UPPER@_VERSION_PATCH @PROJECT_VERSION_PATCH@

/*!
 * \def   @PROJECT_NAME_UPPER@_VERSION
 * \brief The version string given as "<major>.<minor>.<patch>".
 *
 * \see @PROJECT_NAME_UPPER@_VERSION_MAJOR
 * \see @PROJECT_NAME_UPPER@_VERSION_MINOR
 * \see @PROJECT_NAME_UPPER@_VERSION_PATCH
 */
#define @PROJECT_NAME_UPPER@_VERSION "@PROJECT_VERSION@"

/*!
 * \def   @PROJECT_NAME_UPPER@_REVISION
 * \brief The SVN revision number of the project (if applicable).
 *
 * The SVN revision number can only be provided when the project is build from
 * a revision controlled working copy of the project. It is not available in
 * case of a distribution package of the project. Hence, it may only be used for
 * informational debug outputs, but not for actual version dependent
 * processing/compilation. If the revision number is not known, this macro
 * expands to the invalid revision number 0.
 *
 * Example:
 * \code
 *
 * #if @PROJECT_NAME_UPPER@_REVISION
 *   std::cout << "Revision: " << @PROJECT_NAME_UPPER@_REVISION << std::endl;
 * #else
 *   std::cout << "Revision: n/a" << std::endl;
 * #endif
 *
 * \endcode
 *
 * \see @PROJECT_NAME_UPPER@_VERSION
 * \see @PROJECT_NAME_UPPER@_VERSION_MAJOR
 * \see @PROJECT_NAME_UPPER@_VERSION_MINOR
 * \see @PROJECT_NAME_UPPER@_VERSION_PATCH
 */
#define @PROJECT_NAME_UPPER@_REVISION @PROJECT_REVISION@

/****************************************************************************
 * namespace
 ****************************************************************************/

/*!
 * \def   @PROJECT_NAME_UPPER@_NAMESPACE
 * \brief Full project own namespace identifier.
 *
 * This macro should preferably be used when referring to the project own
 * namespace. The namespace can then be renamed later on without affecting
 * written source code.
 *
 * \note Namespace identifier may reflect a nested namespace.
 */
#define @PROJECT_NAME_UPPER@_NAMESPACE \
  ::sbia::@PROJECT_NAME_LOWER@

/*!
 * \def   @PROJECT_NAME_UPPER@_NAMESPACE_BEGIN
 * \brief Macro used to enter project own namespace.
 *
 * Example: 
 * \code
 * @PROJECT_NAME_UPPER@_NAMESPACE_BEGIN
 *
 * // project source code within project own namespace
 * // ... 
 *
 * @PROJECT_NAME_UPPER@_NAMESPACE_END
 * \endcode 
 */ 
#define @PROJECT_NAME_UPPER@_NAMESPACE_BEGIN \
  namespace sbia \
  { \
  \
  namespace @PROJECT_NAME_LOWER@ \
  {

/*!
 * \def   @PROJECT_NAME_UPPER@_NAMESPACE_END
 * \brief Macro used to exit project own namespace.
 *
 * Example: 
 * \code
 * @PROJECT_NAME_UPPER@_NAMESPACE_BEGIN
 *
 * // project source code within project own namespace
 * // ... 
 *
 * @PROJECT_NAME_UPPER@_NAMESPACE_END
 * \endcode 
 */     
#define @PROJECT_NAME_UPPER@_NAMESPACE_END \
  } \
  \
  }

/*!
 * \def   @PROJECT_NAME_UPPER@_NAMESPACE_USE
 * \brief Macro that can be used to import all members of the project own
 *        namespace into the global namespace.
 *
 * \note A using directive, and hence this macro, should never be used in a
 *       source code header file!
 */
#define @PROJECT_NAME_UPPER@_NAMESPACE_USE \
  using namespace @PROJECT_NAME_UPPER@_NAMESPACE

/****************************************************************************
 * system
 ****************************************************************************/

/*!
 * \def HAVE_SSTREAM
 * \brief Whether the ANSI string stream classes are available.
 */
#ifndef HAVE_SSTREAM
#  define HAVE_SSTREAM @HAVE_SSTREAM@
#endif

/*!
 * \def   HAVE_STRSTREAM
 * \brief Whether the obsolete string stream classes are available.
 *
 * \note As the strstream implementations are obsolete already for a long
 *       time, this macro always evaluates to FALSE.
 */
 #ifdef HAVE_STRSTREAM
 #  undef HAVE_STRSTREAM
 #endif
 #define HAVE_STRSTREAM FALSE

/*!
 * \def   HAVE_LONG_LONG
 * \brief Whether the long long type is supported by the compiler.
 */
#ifndef HAVE_LONG_LONG
#  define HAVE_LONG_LONG @HAVE_LONG_LONG@
#endif


#endif /* __@PROJECT_NAME_UPPER@_CONFIG_H */

