use strict;
use warnings;

use Test::More tests => 3;


@BASIS_PERL_UTILITIES@


# ============================================================================
# test get_executable_name()
# ============================================================================

# name of this executable
like (
    Basis::get_executable_name (),
    qr/^test_ExecutableTargetInfo(\.pl)?$/,
    "name of this executable"
);

# name of executable built by some target
like (
    Basis::get_executable_name ('basis::basisproject.sh'),
    qr/^basisproject(\.sh)?$/,
    "name of basis::basisproject.sh target"
);

# ============================================================================
# test get_executable_directory()
# ============================================================================

like (
    Basis::get_executable_directory (),
    qr/\/Testing\/Temporary\/test_utilities-build\/Testing\/bin/,
    "directory of this executable"
);

